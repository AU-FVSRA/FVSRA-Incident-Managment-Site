doctype html
html.has-navbar-fixed-top
    head
        meta(charset='UTF-8')
        meta(content='width=device-width, initial-scale=1' name='viewport')

        title #{page_title}
        link(href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css' rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css' rel='stylesheet')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js' integrity='sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==' crossorigin='anonymous' referrerpolicy='no-referrer')


    body
        include components/NavBar.pug

        //- Dynamically chose what PDRMA form to render based on the initial form selection
        if(formTitle === 'pdrmaForm01')
            include components/PDRMA_Form_01.pug
        else if(formTitle === 'pdrmaForm02')
            include components/PDRMA_Form_02.pug
        else if(formTitle === 'pdrmaForm03')
            include components/PDRMA_Form_03.pug
        else if(formTitle === 'pdrmaForm04')
            include components/PDRMA_Form_04.pug
        else if(formTitle === 'pdrmaForm04E')
            include components/PDRMA_Form_04E.pug

        include components/Footer.pug
